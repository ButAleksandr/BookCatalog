<div id="authorModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit author</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-bind="click: hide">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="authorForm">
                    <input type="hidden" id="id" name="Id" data-bind="value: Id">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group form-md-line-input">
                                <label for="authorName">
                                    First Name
                                </label>
                                <input type="text"
                                       class="form-control"
                                       id="firstName"
                                       name="firstName"
                                       data-bind="value: FirstName"
                                       maxlength="60">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group form-md-line-input">
                                <label for="authorName">
                                    Last Name
                                </label>
                                <input type="text"
                                       class="form-control"
                                       id="lastName"
                                       name="lastName"
                                       data-bind="value: LastName"
                                       maxlength="60">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="save_authorModal">Save</button>
                <button type="button" class="btn btn-secondary close_authorModal" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
